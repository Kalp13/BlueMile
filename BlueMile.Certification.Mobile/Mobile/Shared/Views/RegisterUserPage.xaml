<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlueMile.Certification.Mobile.Views.RegisterUserPage"
             xmlns:viewModels="clr-namespace:BlueMile.Certification.Mobile.ViewModels">
    <ContentPage.BindingContext>
        <viewModels:RegisterUserViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"
                     VerticalOptions="CenterAndExpand">
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="FillAndExpand" 
                         Spacing="3">
                <Entry Text="{Binding FirstName, Mode=TwoWay}" 
                       Keyboard="Text"
                       Placeholder="Name"
                       TabIndex="1"/>
                <Entry Text="{Binding LastName, Mode=TwoWay}" 
                       Keyboard="Text" 
                       Placeholder="Surname"
                       TabIndex="2"/>
            </StackLayout>
            <Label Text="Cell Number"/>
            <Entry Text="{Binding ContactNumber, Mode=TwoWay}"
                   Keyboard="Telephone"
                   Placeholder="Cell"
                   TabIndex="3"
                   ReturnType="Next"/>
            <Label Text="ID/Passport Number"/>
            <Entry Text="{Binding Identification, Mode=TwoWay}"
                    Keyboard="Default"
                    Placeholder="ID/Passport Number"
                    TabIndex="4"/>
            <Label Text="Email" />
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="Email"
                       IsPassword="False"
                       TabIndex="5"
                       Text="{Binding EmailAddress}"/>
                <ImageButton Source="clear.png"
                             Command="{Binding ClearCommand}"/>
            </StackLayout>
            <Label Text="Password"/>
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="Password"
                       TabIndex="6"
                       IsPassword="{Binding HidePassword}"
                       Text="{Binding Password}"/>
                <Button Command="{Binding DisplayPasswordCommand}"
                        Text="Show"
                        Style="{StaticResource ShowPasswordButtonStyle}"/>
            </StackLayout>
            <Label Text="Confirm Password"/>
            <Entry Placeholder="Confirm Password"
                   TabIndex="7"
                   IsPassword="{Binding HidePassword}"
                   Text="{Binding ConfirmPassword}"/>
            <Button Text="Register In"
                    Command="{Binding RegisterCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>