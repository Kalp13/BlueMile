<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlueMile.Certification.Mobile.Views.MainMenuPage"
             xmlns:viewModels="clr-namespace:BlueMile.Certification.Mobile.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <viewModels:MainMenuViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Image Source="BlueMile.png"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Aspect="AspectFit"/>
            <Button Text="My Profile"
                    Command="{Binding BoatsCommand}"/>
            <Button Text="My Profile"
                    Command="{Binding}"/>
            <Button Text="My Profile"
                    Command="{Binding}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>