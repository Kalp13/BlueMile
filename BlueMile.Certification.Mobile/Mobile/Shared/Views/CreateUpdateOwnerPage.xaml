<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:viewModels="clr-namespace:BlueMile.Certification.Mobile.ViewModels"
             x:Class="BlueMile.Certification.Mobile.Views.CreateUpdateOwnerPage"
             Shell.BackgroundColor="{StaticResource DefaultBackgroundColor}"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <viewModels:CreateUpdateOwnerViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <ScrollView VerticalOptions="FillAndExpand"
                    Orientation="Vertical"
                    Margin="5,2">
            <StackLayout Orientation="Vertical" 
                         Spacing="1" 
                         HorizontalOptions="FillAndExpand">
                <Label Text="Name and Surname"/>
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="FillAndExpand" 
                             Spacing="3">
                    <Entry Text="{Binding OwnerDetails.FirstName, Mode=TwoWay}" 
                           Keyboard="Text" 
                           Placeholder="Name"
                           TabIndex="1"/>
                    <Entry Text="{Binding OwnerDetails.LastName, Mode=TwoWay}" 
                           Keyboard="Text" 
                           Placeholder="Surname"
                           TabIndex="2"/>
                </StackLayout>
                <Label Text="Cell Number"/>
                <Entry Text="{Binding OwnerDetails.ContactNumber, Mode=TwoWay}"
                       Keyboard="Telephone"
                       Placeholder="Cell"
                       TabIndex="3"
                       ReturnType="Next"/>
                <Label Text="Email Address"/>
                <Entry Text="{Binding OwnerDetails.Email, Mode=TwoWay}"
                       Keyboard="Email"
                       Placeholder="Email"
                       TabIndex="4"
                       ReturnType="Next"/>
                <!--ID-->
                <Label Text="ID/Passport Number"/>
                <Entry Text="{Binding OwnerDetails.Identification, Mode=TwoWay}"
                       Keyboard="Default"
                       Placeholder="ID/Passport Number"
                       TabIndex="5"/>
                <StackLayout Orientation="Horizontal"
                             VerticalOptions="Center"
                             HorizontalOptions="FillAndExpand">
                    <StackLayout Orientation="Vertical"  
                                 HorizontalOptions="FillAndExpand"
                                 VerticalOptions="CenterAndExpand">
                        <Label Text="Address"/>
                        <Entry Text="{Binding OwnerDetails.UnitNumber, Mode=TwoWay}"
                           Keyboard="Text"
                           Placeholder="Complex Name"
                           TabIndex="6"/>
                        <Entry Text="{Binding OwnerDetails.ComplexName, Mode=TwoWay}"
                           Keyboard="Text"
                           Placeholder="Unit Number"
                           TabIndex="7"/>
                        <Entry Text="{Binding OwnerDetails.StreetNumber, Mode=TwoWay}"
                           Keyboard="Text"
                           Placeholder="Street Number or Cross Street"
                           TabIndex="8"/>
                        <Entry Text="{Binding OwnerDetails.StreetName, Mode=TwoWay}"
                           Keyboard="Text"
                           Placeholder="Street Name"
                           TabIndex="9"/>
                        <Entry Text="{Binding OwnerDetails.Suburb, Mode=TwoWay}"
                           Keyboard="Text"
                           Placeholder="Suburb"
                           TabIndex="10"/>
                        <Entry Text="{Binding OwnerDetails.Town, Mode=TwoWay}"
                           Keyboard="Text"
                           Placeholder="Town/City"
                           TabIndex="11"/>
                        <Entry Text="{Binding OwnerDetails.Province, Mode=TwoWay}"
                           Keyboard="Text"
                           Placeholder="Province"
                           TabIndex="12"/>
                        <Entry Text="{Binding OwnerDetails.Country, Mode=TwoWay}"
                           Keyboard="Text"
                           Placeholder="Country"
                           TabIndex="13"/>
                        <Entry Text="{Binding OwnerDetails.PostalCode, Mode=TwoWay}"
                           Keyboard="Text"
                           Placeholder="Postal Code"
                           TabIndex="14"/>
                    </StackLayout>
                    <!--<Button ImageSource="location.png"
                            Command="{Binding GetAddressCommand}"
                            WidthRequest="70"
                            HorizontalOptions="End"/>-->
                </StackLayout>

                <ImageButton Source="{Binding OwnerDetails.IdentificationDocument.FilePath, TargetNullValue='image.png', Mode=TwoWay}"
                             Aspect="AspectFit"
                             BackgroundColor="#00000000"
                             Command="{Binding CaptureIDPhotoCommand}"
                             HeightRequest="200"/>
                <!--Skippers-->
                <Label Text="Skippers Number"/>
                <Entry Text="{Binding OwnerDetails.SkippersLicenseNumber, Mode=TwoWay}"
                       Keyboard="Text"
                       Placeholder="Skippers Number"
                       TabIndex="15"/>
                <ImageButton Source="{Binding OwnerDetails.SkippersLicenseImage.FilePath, TargetNullValue='image.png', Mode=TwoWay}"
                             Command="{Binding CaptureSkippersPhotoCommand}"
                             Aspect="AspectFit"
                             BackgroundColor="#00000000"
                             HeightRequest="200"/>
                <!--VHF-->
                <Label Text="VHF License Number"/>
                <Entry Text="{Binding OwnerDetails.VhfOperatorsLicense, Mode=TwoWay}"
                       Keyboard="Text"
                       Placeholder="VHF License"
                       TabIndex="16"/>
                <!--ICASA-->
                <Label Text="ICASA POP"/>
                <ImageButton Source="{Binding OwnerDetails.IcasaPopPhoto.FilePath, TargetNullValue='image.png', Mode=TwoWay}"
                             Command="{Binding CaptureIcasaPopPhotoCommand}"
                             Aspect="AspectFit"
                             BackgroundColor="#00000000"
                             HeightRequest="200"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save"
                     IconImageSource="save.png"
                     Command="{Binding SaveCommand}"
                     Order="Primary"
                     Priority="1"/>
        <ToolbarItem Text="Cancel"
                     IconImageSource="cancel.png"
                     Command="{Binding CancelCommand}"
                     Order="Primary"
                     Priority="2"/>
    </ContentPage.ToolbarItems>
</ContentPage>