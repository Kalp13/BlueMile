<?xml version="1.0" encoding="UTF-8"?>
<mvxViews:MvxContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:RenewalReminder.Core.ViewModels;assembly=RenewalReminder.Core"
    xmlns:mvxViews="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:local="clr-namespace:RenewalReminder.UI.Pages"
    x:Class="RenewalReminder.UI.Pages.NewItemSelectionPage"
    x:TypeArguments="viewModels:NewItemSelectionViewModel"
    Padding="10, 0"
    AbsoluteLayout.LayoutFlags="All"
    IsVisible="False"
    BackgroundColor="#C0808080">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <StackLayout Orientation="Vertical" HeightRequest="200" WidthRequest="300" BackgroundColor="Blue">
            <Button Text="Scam" Command="{Binding ScanCommand}"/>
            <Button Text="Capture Manully" Command="{Binding ManualCommand}"/>
        </StackLayout>
    </StackLayout>
</mvxViews:MvxContentPage>